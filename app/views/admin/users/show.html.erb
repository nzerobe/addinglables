div class="container">
  <div class="user-show">
    <div class="form-wrapper">
      <h1>ユーザー詳細</h1>
      <div class="user-info">
        <ul>
          <li class="info-title">Name</li>
          <li><%= @user.name %></li>
        </ul>
        <ul>
          <li class="info-title">Content</li>
          <li><%= @user.email %></li>
        </ul>
        <ul>
          <li class="info-title">Function</li>
          <li><%= @user.admin %></li>
        </ul>
        <ul>
          <li class="info-title">Number of Blogs</li>
          <li><%= @user.blogs.count %></li>
        </ul>
      </div>

      <div class="form-footer">
        <%= link_to "編集", edit_admin_user_path %>
        <%= link_to "一覧へ戻る", admin_users_path %>
      </div>
    </div>

    <div class="index-box">
      <% unless @user.blogs.empty? %>
        <table border="1">
          <tr>
            <th id="title">Title</th>
            <th id="content">Content</th>
            <th id="deadline">Deadline</th>
            <th id="status">Status</th>
            <th id="priority">Priority</th>
          </tr>

          <% @user.blogs.each do |blog| %>
            <tr>
              <td><%= blog.title %></td>
              <td><%= blog.content %></td>
              <td><%= blog.deadline %></td>
              <td><%= blog.status %></td>
              <td><%= blog.priority %></td>
            </tr>
          <% end %>
        </table>
      <% else %>
        <p>No Blog</p>
      <% end %>
    </div>
  </div>
</div>